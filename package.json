{
  "name": "node-wallpaper",
  "version": "6.0.2",
  "description": "Get wallpaper from any platform",
  "main": "lib/index.js",
  "gypfile": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && tsc",
    "build:gyp": "node-gyp configure && node-gyp build",
    "clean": "node-gyp clean && rimraf lib",
    "typecheck": "tsc --noEmit",
    "lint": "esw --color --ext .ts src",
    "lint:fix": "esw --color --fix --ext .ts src",
    "lint:watch": "esw --color --fix --watch --cache --ext .ts src",
    "format": "prettier --write src",
    "release": "standard-version",
    "release:pre": "standard-version --prerelease"
  },
  "files": [
    "lib",
    "src/win/module",
    "src/macos/module",
    "binding.gyp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gergof/node-wallpaper.git"
  },
  "keywords": [
    "wallpaper",
    "image",
    "desktop",
    "background",
    "linux",
    "mac",
    "windows"
  ],
  "author": "Fándly Gergő",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/gergof/node-wallpaper/issues"
  },
  "homepage": "https://github.com/gergof/node-wallpaper#readme",
  "devDependencies": {
    "@types/node": "^16.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-watch": "^7.0.0",
    "fs-extra": "^10.0.0",
    "node-gyp": "^8.1.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.0",
    "typescript": "^4.3.5"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "git fetch --all --tags"
    },
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "imp",
        "section": "Improvements"
      },
      {
        "type": "ci",
        "section": "Build/CI"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "refactor",
        "section": "Refactor"
      },
      {
        "type": "test",
        "section": "Testing"
      }
    ]
  },
  "dependencies": {
    "node-addon-api": "^4.0.0"
  }
}
